* {
  box-sizing: border-box;
}

body {
  color: $c-font;
  background: $c-bg;
}

button {
  background: none;
  border: none;
  padding: 0;
}

button, a {
  cursor: pointer;
  
  &:focus {
    outline: none;
    background: $c-focus;
  }
}

picture {
  display: inline-block;
}

section, nav, header, footer, main {
  display: block;
}

svg {
  fill: $c-font;
}

main {
  padding-bottom: 32px;

  @media (--md) {
    padding-bottom: 48px;
  }

  @media (--lg) {
    padding-bottom: 64px;
  }
}