.popular__button-container {
  text-align: center;
}

.popular__button {
  margin-top: 32px;
  display: inline-block;
  padding: 12px 24px;
  border: 1px solid $c-font;
  transition: background-color $t-duration, color $t-duration;

  @media(--md) {
    margin-top: 48px;

    &:hover {
      background: $c-font;
      color: $c-bg;
    }
  }
}