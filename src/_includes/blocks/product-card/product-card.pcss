.product-card {
  text-align: center;
}

.product-card__photo {
  max-width: 200px;
  margin: auto;
}

.product-card__link {
  display: block;

  &:focus {
    background: inherit;

    .product-card__title span {
      background: $c-focus;
    }
  }

  &:hover {
    text-decoration: underline;
  }
}

.product-card__title {
  margin-left: auto;
  margin-right: auto;
  max-width: 220px;
}