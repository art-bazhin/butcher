.categories {
  margin-bottom: 32px;

  @media(--md) {
    border-bottom: 1px solid $c-font;
    margin-bottom: 40px;
  }

  @media(--lg) {
    margin-bottom: 48px;
  }

  a, span {
    @include base-font;
    padding: 0;
    margin: 0;
    text-align: center;

    @media(--lg) {
      font-size: 20px;
    }
  }

  span {
    font-weight: 700;
    cursor: default;
  }
}

.categories__row {
  @include heading-margin;

  text-align: center;
  text-transform: uppercase;

  @media(--md) {
    @include row;
    flex-wrap: nowrap;
    justify-content: space-between;
  }
}

.categories__item {
  margin-bottom: 16px;
  flex-basis: 100%;
  padding-left: $g-gutter;
  padding-right: $g-gutter;

  @media(--md) {
    margin-bottom: 20px;
  }
}